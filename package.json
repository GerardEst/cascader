{
  "name": "@gerardest/cascader",
  "version": "1.2.0",
  "description": "Very basic and tiny masonry. Easy, responsive and resizeable blocks.",
  "main": "build/cascader-min.js",
  "scripts": {
    "build": "esbuild src/cascader.ts --drop:console --bundle --minify --sourcemap --format=esm --outfile=build/cascader-min.js",
    "watch": "esbuild src/cascader.ts --bundle --minify --watch --sourcemap --format=esm --outfile=build/cascader-min.js",
    "buildExample": "esbuild examples/main.ts --format=esm --outfile=examples/main.js"
  },
  "keywords": [
    "masonry",
    "responsive",
    "resize"
  ],
  "author": "gerardest",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.15.7"
  }
}
